{
    "rules": {
        "no-string-throw": true,
        "no-unused-expression-chai": true,
        "no-duplicate-variable": true,
        "curly": true,
        "class-name": true,
        "semicolon": [true, "always"],
        "triple-equals": true
    },
    "rulesDirectory": [
        "tslint-no-unused-expression-chai"
    ],
    "defaultSeverity": "error",
    "linterOptions": {
        "exclude": [
            "src/*.js",
            "src/lib/**",
            "src/test/**.js"
        ]
    }
}
